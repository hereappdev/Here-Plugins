{
   "name": "SSPai",
   "version": "1.2.1",
   "description": "Show latest articles from sspai.com",
   "identifier": "foh.sspai",
   "createdBy": "Lifesign",
   "icon": "icon.png",
   "website": "https://github.com/FriendsOfHere/sspai",
   "appcast": "https://raw.githubusercontent.com/FriendsOfHere/sspai/master/src/appcast.xml",
   "script": "index.js",
   "defaultCategory": "News",
   "displayOn": [
      "mini",
      "menuBar",
      "dock"
   ],
   "preferences": [
      {
          "title": "更新时间(h)",
          "type": "text",
          "key": "update-frequency",
          "default": "2"
      },
      {
          "title": "文章拉取数量",
          "type": "popup",
          "key": "article-num",
          "default": 0,
          "options": [
              "10",
              "15",
              "20"
          ]
      },
      {
          "title": "更新频道",
          "type": "popup",
          "key": "update-channel",
          "default": 0,
          "options": [
              "Matrix",
              "首页推荐(暂未支持)",
          ]
      },
      {
          "title": "未读消息提醒",
          "type": "popup",
          "key": "unread-notify",
          "default": 0,
          "options": [
              "关闭",
              "开启",
          ]
      },
      {
          "title": "DEBUG 快捷键",
          "type": "text",
          "key": "debug-hotkey",
          "default": "cmd+F1",
      }
   ]
}
